@model ViewModel<LoginAppModel>

@{
    Model.PageMeta.PageTitle = "Login";
    Model.PageMeta.Description = "Login";
    Model.PageMeta.AddKeyword("Login");
    Model.PageMeta.RobotsFollow = false;
    Model.PageMeta.RobotsIndex = false;
}

<h1>Login</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-area="Auth" asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" asp-antiforgery="true">
    <input type="hidden" name="returnUrl" value="@Model.ViewData.ReturnUrl" />

    <div class="form-group row">
        <label asp-for="ViewData.Email" for="Email" class="control-label col-sm-4"></label>
        <div class="col-sm-4">
            <input id="Email" asp-for="ViewData.Email" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="ViewData.Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ViewData.Password" for="Password" class="control-label col-sm-4"></label>
        <div class="col-sm-4">
            <input id="Password" asp-for="ViewData.Password" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="ViewData.Password"></span>
        </div>
    </div>

    <div class="form-group row btn-group">
        <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-unlock"> </i> Login</button>
        <a class="btn btn-default btn-lg" href="@Model.ViewData.ReturnUrl ?? /"><i class="fa fa-eraser"> </i> Cancel</a>
    </div>

</form>

<div class="row">
    <div class="col-sm-12">
        <p>If you have not set up an account yet, you can <a asp-area="Auth" asp-controller="Authentication" asp-action="CreateAccount"><i class="fa fa-user-plus"></i> Register with us.</a></p>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}